<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!--  thanh trạng thái của hệ thống  -->
    <style name="Theme.Status.White" parent="Theme.ProjectLibManna">
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
    </style>
    <!--  end  -->
    <!--  Toast custom  -->
    <style name="ToastError">
        <item name="stTextColor">#FFFFFF</item>
        <item name="stFont">@font/inter_medium</item>
        <item name="stTextSize">15sp</item>
        <item name="stColorBackground">@color/error</item>
        <item name="stRadius">30dp</item>
        <item name="stIconStart">@drawable/ic_error</item>
    </style>

    <style name="ToastOk">
        <item name="stTextColor">#FFFFFF</item>
        <item name="stFont">@font/inter_regular</item>
        <item name="stTextSize">15sp</item>
        <item name="stColorBackground">#22BD72</item>
        <item name="stRadius">30dp</item>
        <item name="stIconStart">@drawable/ic_check</item>
    </style>

    <style name="ToastWelcome">
        <item name="stTextColor">#FFFFFF</item>
        <item name="stFont">@font/inter_regular</item>
        <item name="stTextSize">15sp</item>
        <item name="stColorBackground">@color/ColorTeal2</item>
        <item name="stSolidBackground">true</item>
        <item name="stRadius">8dp</item>
        <item name="stIconStart">@drawable/ic_star24</item>
        <item name="stIconEnd">@drawable/ic_star24</item>
        <item name="stGravity">top</item>
    </style>
    <!--  end  -->
    <!--    font family toolbar-->
    <style name="fontFamilyToolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textSize">19sp</item>
    </style>
    <!--    end-->
    <!--    font family menu item drawer-->
    <style name="fontFamilyItemMenu" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/inter_regular</item>
    </style>
    <!--    end-->


</resources>