<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <RelativeLayout
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bgr_item_rd5_white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp"
        tools:ignore="UselessParent">

        <ImageView
            android:layout_marginStart="16dp"
            android:id="@+id/imageView6"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/avatar_thuthu"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:layout_toStartOf="@id/tvChiTiet"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/imageView6"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvHoten"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_bold"
                android:text="@string/user_name"
                android:textColor="@color/textColor"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:alpha="0.5"
                android:fontFamily="@font/inter_regular"
                android:text="@string/nav_header_subtitle"
                android:textColor="@color/textColor"
                android:textSize="17sp" />
        </LinearLayout>

        <TextView
            android:layout_alignParentTop="true"
            android:id="@+id/tvChiTiet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_gravity="bottom"
            android:background="@drawable/bgr_tv_chi_tiet"
            android:fontFamily="@font/inter_regular"
            android:gravity="center"
            android:paddingStart="16dp"
            android:paddingTop="2dp"
            android:paddingEnd="16dp"
            android:paddingBottom="2dp"
            android:text="@string/chi_tiet"
            android:textColor="@color/white"
            android:textSize="13sp"
            tools:ignore="RelativeOverlap" />
    </RelativeLayout>
</LinearLayout>